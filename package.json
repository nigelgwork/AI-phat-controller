{
  "name": "ai-controller",
  "version": "1.4.0",
  "description": "AI Controller - Multi-agent orchestration dashboard",
  "private": true,
  "main": "dist-server/server/index.js",
  "bin": {
    "ai-phat-controller": "bin/cli.js"
  },
  "scripts": {
    "start": "pnpm run build && node dist-server/server/index.js",
    "dev": "concurrently --kill-others \"vite\" \"tsx watch server/index.ts\"",
    "build": "pnpm run build:frontend && pnpm run build:server && pnpm run copy-assets",
    "build:frontend": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "copy-assets": "cp -r server/db/migrations dist-server/server/db/",
    "preview": "vite preview",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev:server": "tsx watch server/index.ts",
    "docker:build": "docker build -t ai-controller .",
    "docker:run": "docker-compose up"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "ws": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@tanstack/react-query": "^5.90.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.17.12",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "@xyflow/react": "^12.10.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.7.3",
    "eslint": "^9.18.0",
    "jsdom": "^28.0.0",
    "lucide-react": "^0.562.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.2",
    "zustand": "^5.0.9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ],
    "overrides": {
      "tar": ">=7.5.7"
    }
  }
}
