{
  "name": "ai-controller",
  "version": "1.3.2",
  "description": "AI Controller - Multi-agent orchestration dashboard",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc && vite build && electron-builder",
    "build:frontend": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:go": "bash scripts/build-go-tools.sh",
    "preview": "vite preview",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dist": "npm run build:go && npm run build && electron-builder --win",
    "dist:win": "npm run build:go && npm run build && electron-builder --win --publish never"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.7.3",
    "ws": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.90.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.17.12",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "@xyflow/react": "^12.10.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.18.0",
    "jsdom": "^28.0.0",
    "lucide-react": "^0.562.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.2",
    "zustand": "^5.0.9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ],
    "overrides": {
      "tar": ">=7.5.7"
    }
  },
  "build": {
    "appId": "com.aicontroller.app",
    "productName": "AI Controller",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "nigelgwork",
      "repo": "AI-fat-controller"
    }
  }
}
